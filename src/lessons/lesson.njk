---
layout: layout.njk
pagination:
  data: collections.lessons
  size: 1
  alias: lesson
  addAllPagesToCollections: true
permalink: "lessons/{{ lesson.id }}.html"
eleventyComputed:
  title: "{{ lesson.title }}"
