    <div class="container">
      <h1>{{ lesson.title }}</h1>
      <p>{{ lesson.content }}</p>
      <a href="{{ site.baseUrl }}quizzes/{{ lesson.id }}.html">Take Quiz</a>
    </div>
</main>
